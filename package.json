{
  "name": "@livekit/components",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:react": "turbo run build --filter=@livekit/components-react...",
    "build:shared": "turbo run build --filter=@livekit/components-core...",
    "build:styles": "turbo run build --filter=@livekit/components-styles...",
    "dev": "turbo run dev --parallel",
    "dev:nextjs": "turbo run dev --filter=@livekit/component-example-next... --parallel",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docs": "typedoc",
    "clean:all": "turbo run clean:all"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@changesets/changelog-github": "^0.4.4",
    "prettier": "^2.5.1",
    "turbo": "^1.2.3",
    "typescript": "4.3.x || 4.4.x || 4.5.x || 4.6.x || 4.7.x"
  },
  "peerDependencies": {
    "typescript": "4.3.x || 4.4.x || 4.5.x || 4.6.x || 4.7.x"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
