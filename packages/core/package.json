{
  "name": "@livekit/components-core",
  "version": "0.2.4",
  "license": "Apache-2.0",
  "author": "LiveKit",
  "repository": {
    "type": "git",
    "url": "https://github.com/livekit/components-js.git",
    "directory": "/packages/core"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup --onSuccess \"tsc --declaration --emitDeclarationOnly\"",
    "dev": "tsup --watch",
    "lint": "eslint -f unix \"src/**/*.{ts,tsx}\"",
    "test": "vitest --run",
    "test:watch": "vitest",
    "size": "size-limit"
  },
  "typings": "dist/index.d.ts",
  "dependencies": {
    "@floating-ui/dom": "^1.1.0",
    "loglevel": "^1.8.1",
    "rxjs": "^7.8.0",
    "email-regex": "^5.0.0",
    "ip-regex": "^5.0.0",
    "global-tld-list": "^0.0.995"
  },
  "peerDependencies": {
    "livekit-client": "^1.6.2"
  },
  "devDependencies": {
    "@livekit/components-styles": "~0.1.13",
    "@size-limit/file": "^8.1.2",
    "@size-limit/webpack": "^8.1.2",
    "eslint-config-lk-custom": "^0.1.1",
    "livekit-client": "^1.6.2",
    "size-limit": "^8.1.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vitest": "^0.26.3"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}