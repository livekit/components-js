{
  "name": "@livekit/components-svelte",
  "version": "0.1.1",
  "main": "./dist/index.js",
  "private": true,
  "scripts": {
    "dev": "svelte-kit sync && svelte-package",
    "build": "svelte-kit sync && svelte-package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@sveltejs/package": "next",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@livekit/components-core": "0.1.1"
  },
  "peerDependencies": {
    "livekit-client": "^1.4.2"
  },
  "typings": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "type": "module",
  "files": [
    "dist",
    "src"
  ]
}
