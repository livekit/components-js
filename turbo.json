{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "lib/**",
        "src/assets/icons/**",
        "src/assets/images/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "start": {},
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:watch": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**", "lib/**"]
    },
    "deploy": {
      "dependsOn": ["^build"]
    },
    "api-extractor": {
      "dependsOn": ["@livekit/components-react#build", "@livekit/components-core#build"],
      "outputs": ["temp/*", "etc/*"]
    },
    "gen:docs": {
      "cache": false,
      "dependsOn": ["^api-extractor", "@livekit/api-documenter#build"],
      "outputs": ["docs/docs/**"]
    },
    "api-check": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "api-check:update": {}
  }
}
